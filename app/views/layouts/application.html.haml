!!!
%html
  %head
    %title RailsTest
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    -if current_user
      %ul
        %li
          = current_user.email
        %li
          = link_to 'sign out', destroy_user_session_path, method: :delete
    %p.notice
      = notice
    %p.alert
      = alert
    = yield
